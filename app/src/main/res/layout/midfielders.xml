<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/darkblue">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@color/blue"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/midfielder"
                android:layout_width="360dp"
                android:layout_height="240dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:importantForAccessibility="no"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/namemidfielder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/midfielder"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:text="@string/name"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/datemidfielder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/namemidfielder"
                android:layout_margin="10dp"
                android:text="@string/birthdate"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textSize="17sp"
                tools:ignore="TextSizeCheck"/>

            <TextView
                android:id="@+id/countrymidfielder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/datemidfielder"
                android:layout_margin="10dp"
                android:text="@string/country"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textSize="17sp"
                tools:ignore="TextSizeCheck"/>
        </RelativeLayout>
    </LinearLayout>
</layout>